configuration {
    modi: "window,run,drun";
    show-icons: false;
    font: "Roboto Mono 10.5";
}

@import "colors.rasi"

#window {
    width: 100%;
    height: 100%;
    background-color: rgba(255,255,255,0);
    padding: 43 1300 620 15;
}

#mainbox {
    border:  3;
	border-color: @selected-background;
    border-radius: 0;
    padding: 13;
    background-color: @background-solid;
}

#textbox {
    text-color: @white;
}

#listview {
    columns: 1;
    spacing: 0px;
    cycle: false;
    dynamic: true;
    layout: vertical;
	border: 0;
	border-color: @selected-background;
	border-radius: 0;
    background-color: transparent;
    padding: 10 0 0 0;
}

element {
    margin: 3px 0 5 0;
    padding: 2 0 2 5;
    border-radius: 0; 
    orientation: vertical;
}

element-icon {
    size: 55px;
}

#element.normal.normal {
    background-color: transparent;
    text-color:       @foreground;
    size: 0px;
}

#element.selected.normal {
    background-color: @selected-background;
    text-color:       @selected-foreground;
    border-color: #d07ef2;
}

#element.alternate.normal {
    background-color: transparent;
    text-color:       @foreground;
}

#mode-switcher {
    border:       0px 0px 0px ;
    border-color: @separatorcolor;
}

#button {
    spacing:    0;
    text-color: @foreground;
}

#button.selected {
    background-color: rgba(255,255,255,0.1);
    text-color:       @white;
}

#inputbar {
    spacing: 0;
    text-color: #D9E0EE;
    margin: 0;
    padding: 0 0 0 5;
    background-color: @background;
    border-radius: 9;
}

#case-indicator {
    spacing:    0;
    text-color: @foreground;
    background-color: rgba(0,0,0,0);
}

#entry {
    spacing:    0;
    text-color: @foreground;
    background-color: rgba(0,0,0,0);
}

#prompt {
    spacing:    0;
    text-color: @foreground;
    background-color: rgba(0,0,0,0);
}

#textbox-prompt-colon {
    expand:     false;
    str:        ":";
    margin:     0px 0.3em 0em 0em ;
    text-color: @foreground;
    background-color: rgba(0,0,0,0);
}

#inputbar {
    children: [prompt,textbox-prompt-colon,entry,case-indicator];
}

element-text, element-icon {
    background-color: inherit;
    text-color:       inherit;
    horizontal-align:   0;
    vertical-align:     0;
}
